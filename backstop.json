{
  "id": "backstop_default",
  "viewports": [
    {
      "label": "phone",
      "width": 320,
      "height": 480
    },
    {
      "label": "tablet",
      "width": 1024,
      "height": 768
    }
  ],
  "onBeforeScript": "puppet/onBefore.js",
  "onReadyScript": "puppet/onReady.js",
  "scenarios": [
    {
      "label": "Homepage",
      "url": "http://localhost:3006",
      "delay": 1500,
      "misMatchThreshold": 1.0
    },
    {
        "label": "About me",
        "url": "http://localhost:3006/about-me",
        "delay": 1500,
        "misMatchThreshold": 1.0
    },
    {
        "label": "Skills",
        "url": "http://localhost:3006/skills",
        "delay": 1500,
        "misMatchThreshold": 1.0
    },
    {
        "label": "Experience",
        "url": "http://localhost:3006/experience",
        "delay": 1500,
        "misMatchThreshold": 1.0
    },
    {
        "label": "Community",
        "url": "http://localhost:3006/community",
        "delay": 1500,
        "misMatchThreshold": 1.0
    }        
  ],
  "paths": {
    "bitmaps_reference": "backstop_data/bitmaps_reference",
    "bitmaps_test": "backstop_data/bitmaps_test",
    "engine_scripts": "backstop_data/engine_scripts",
    "html_report": "backstop_data/html_report",
    "ci_report": "test-results"
  },
  "ci": {
    "format" : "junit" ,
    "testReportFileName": "test-visual"
  },
  "report": ["browser", "CI"],
  "engine": "puppeteer",
  "engineOptions": {
    "args": ["--no-sandbox"]
  },
  "asyncCaptureLimit": 5,
  "asyncCompareLimit": 50,
  "debug": false,
  "debugWindow": false
}
